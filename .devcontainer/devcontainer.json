{
    "name": "SiliconCrew Dev Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "mshr-h.veriloghdl",
                "formulahendry.code-runner"
            ]
        }
    },
    "forwardPorts": [8501],
    "containerEnv": {
        "IN_DOCKER_CONTAINER": "true"
    },
    "remoteUser": "vscode"
}
